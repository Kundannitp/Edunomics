<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    android:background="@drawable/custom_dialog_round_corner"
    >

    <TextView
        android:id="@+id/login_stat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="35sp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        />
    <EditText
        android:id="@+id/login_email"
        android:layout_below="@+id/login_stat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your email address"
        android:textSize="22sp"
        android:background="@drawable/edittext_design"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="5dp"
        />

    <EditText
        android:id="@+id/login_psw"
        android:layout_below="@+id/login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:background="@drawable/edittext_design"
        android:textSize="22sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="5dp"
        />

    <Button
        android:layout_below="@+id/login_psw"
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="@drawable/btn_backgound_greeen"
        android:textColor="#FAF8F8"
        android:textSize="25sp"
        android:layout_marginTop="90dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="31dp"
        android:paddingRight="20dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/signup_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_btn"
        android:layout_marginTop="60dp"
        android:text="Sign Up Now !"
        android:textSize="25sp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:layout_marginBottom="25dp"
        />

</RelativeLayout>